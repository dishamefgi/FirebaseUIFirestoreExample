<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewDoctorActivity">

    <TextView
        android:text="Date"
        android:id="@+id/datetext"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Doctor Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Speciality"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/edit_text_RetailerNameCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Retailer Name and Code"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_CoNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Contact No"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edit_text_DrEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dr. Email"
        android:inputType="textEmailAddress" />


    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratebar"
        android:stepSize="0.5"
        android:numStars="5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:autofillHints="states"
        android:spinnerMode="dialog" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Priority:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <NumberPicker
        android:id="@+id/number_picker_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
</LinearLayout>