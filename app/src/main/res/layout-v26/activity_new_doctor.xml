<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".NewDoctorActivity">

    <EditText
        android:id="@+id/edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:inputType="textMultiLine" />
    <EditText
        android:id="@+id/edit_text_RetailerNameCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Retailer Name and Code"
        android:inputType="text" />

    <com.firebase.ui.auth.ui.phone.CountryListSpinner
        android:id="@+id/edit_text_CoNo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Contact No" />

    <EditText
        android:id="@+id/edit_text_DrEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dr. Email"
        android:inputType="text" />


    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratebar"
        android:stepSize="0.5"
        android:numStars="5"
        android:rating="4.5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:spinnerMode="dialog" />

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckedTextView" />

    <ToggleButton
        android:id="@+id/purchasetoggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton" />

    <EditText
        android:hint="Zip Code"
        android:maxLength="6"
        android:inputType="number"
        android:id="@+id/zipcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Priority:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <NumberPicker
        android:id="@+id/number_picker_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
</LinearLayout>